{
  "name": "errorset",
  "version": "0.1.0",
  "description": "Domain-bound, type-safe error handling for TypeScript inspired by Zig's error sets",
  "author": "g5becks",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "error",
    "error-handling",
    "errorset",
    "typescript",
    "type-safe",
    "zig",
    "result",
    "either",
    "domain-driven"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/g5becks/errorset.git"
  },
  "bugs": {
    "url": "https://github.com/g5becks/errorset/issues"
  },
  "homepage": "https://github.com/g5becks/errorset#readme",
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20260105.1",
    "lefthook": "^2.0.13",
    "tsd": "^0.33.0",
    "ultracite": "7.0.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "prepare": "lefthook install",
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun run build:types",
    "build:types": "bunx tsc -p tsconfig.build.json",
    "test": "bun test",
    "test:types": "bun run build && tsd",
    "lint": "bunx ultracite check --type-aware",
    "lint:fix": "bunx ultracite fix --type-aware",
    "typecheck": "bunx tsgo --noEmit",
    "prepublishOnly": "bun run build && bun run test && bun run test:types && bun run typecheck"
  },
  "tsd": {
    "directory": "test-d",
    "compilerOptions": {
      "strict": true,
      "esModuleInterop": true
    }
  }
}
